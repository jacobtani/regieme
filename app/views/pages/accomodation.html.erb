<div class="container accomodation-page">
  <h2>Accomodation</h2>
  <div class="row">
    <% @accomodation.each do |a| %>
      <div class="columns large-4">
        <% @photo = a["photo"] %>
        <%= image_tag(@photo, class: "img-responsive tidy-img") %>
        <dl>
          <dt>Accomodation Name</dt>
          <dd><%= link_to "#{a["name"]}", "#{a["url"]}"%></dd>
          <dt>Accomodation Address</dt>
          <dd><%= a["address"] %></dd>
          <dd><%= a["phone_number"] %></dd>
        </dl>
      </div>
    <% end %>
  </div>
</div>
