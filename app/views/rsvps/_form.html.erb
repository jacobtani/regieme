<div class='container form-scrollable'>
  <%= bootstrap_form_for(@rsvp, layout: :horizontal, label_errors: false, inline_errors: false)  do |f| %>
    <% if @rsvp.errors.messages.present? %>
      <div class="alert alert-warning" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <%= @rsvp.errors.full_messages.first %>
      </div>
    <% end %>
    <%= f.text_field :full_name, placeholder: 'Enter full name', class: 'form-control required', autofocus: true, label: 'Full Name' %>
    <%= f.select :attending, [ 'Yes', 'No' ], :prompt => 'Are you attending?', class: 'form-control required' %>
    <div class='optional-elements'>
      <%= f.select :main_meal_preference, [ 'Beef Fillet on Spring Onion Potato Cake w/ Parmesan Herb Mushroom, Cherry Tomatoes, Spinach & Pinot Noir Jus', 'Chicken Roulade filled w/ Spinach, Pistachio Nuts, White Wine Sauce, Green Bean, Almond Salad & Potatoes', 'Herb Roasted Lamb Rump served on Kumara Cake w/ Pan Tossed Green Beans, Vine Tomatoes & Pinot Noir Glaze', 'Seared Salmon Teriyaki with Lemon Confit and Wasabi Aioli, served w/ Asian Greens w/ Ginger and Oyster Sauce', 'Grilled Mediterranean Vegetable Stacks w/ Haloumi and Olive Tapenade (V/Gluten Free)', 'Margherita Pizza w/ Hand Cut Fries and Crunchy Coleslaw (for kids aged 5 -12 only)'], :prompt => 'Select Mains Preference', class: 'form-control col-md-12', label: 'Mains Preference', cols: '15' %>
      <%= f.select :dessert_preference, [ 'Warm Date, Honey, Rhubarb and Apple Crumble with Cream', 'Creme Brulee (smooth and creamy vanilla custard) with Caramelised Sugar and Shortbread Biscuit' ], :prompt => 'Select Dessert Preference', class: 'form-control col-md-12', label: 'Dessert Preference' %>
      <%= f.text_field :dietary_requirements, placeholder: 'Enter any special dietary requirements', class: 'form-control', label: 'Dietary Requirements' %>
    </div>
    <div class='level-header'>
      <%= button_tag(type: 'submit', class: "btn generic-button command-button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sending..."}) do %>
        <i class="fa fa-save"></i> Save
      <% end %>
    </div>
  <% end %>
</div>