<div class = 'container level-header gift-page'>
  <%= link_to fa_icon("plus", text: 'Add Gift'), new_gift_path, class: "btn btn-primary hvr-sweep-to-right", id: 'new-gift-link' %>
  <% @categories = Category.all %>
  <div class="row">
    <% @categories.each do |cat| %>
    <h2 class='gift-categories'><%= cat.name %></h2> 
    <% @gifts.where(category_id: cat.id).in_groups_of(3) do |group| %>
      <div class="row">
        <% group.compact.each do |gift_a| %>
          <div class="col-md-4">
            <%= image_tag gift_a.gift_image, :width => '100%', :height => '100%' %>
            <b><p><%= gift_a.caption %></p></b>
            <p><%= number_to_currency gift_a.price %></p>
            <p><%= gift_a.description %></p> 
            <p><%= link_to fa_icon("pencil", text:'Edit'), edit_gift_path(id: gift_a.id), class: "btn btn-success hvr-sweep-to-right", id: 'edit-gift-link' %>
            <%= link_to fa_icon("trash", text: 'Delete'), gift_path(gift_a), method: :delete,
                  class: "btn btn-danger hvr-sweep-to-right", id: 'delete-gift-link' %></p>
          </div>
        <% end %>
      </div>
    <% end %>
    <%end%>
  </div>
</div>